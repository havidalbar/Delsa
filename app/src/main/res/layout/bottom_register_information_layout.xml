<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_regisdata"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:background="@drawable/btnwhite"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lengkapi data berikut"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Nama Lengkap"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_namaRegister"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/etbg"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:drawablePadding="8dp"
        android:inputType="textPersonName"
        android:drawableTint="@android:color/darker_gray"
        android:hint="Nama Lengkap"
        android:paddingHorizontal="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Nomor Telepon"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_noTelpRegister"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/etbg"
        android:inputType="phone"
        android:drawableLeft="@drawable/ic_phone_black_24dp"
        android:drawablePadding="8dp"
        android:drawableTint="@android:color/darker_gray"
        android:hint="No Telephone"
        android:paddingHorizontal="16dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:text="Kota"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/et_kotaRegister"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/etbg"
        android:drawableLeft="@drawable/ic_location_city_black_24dp"
        android:drawablePadding="8dp"
        android:drawableTint="@android:color/darker_gray"
        android:hint="Kota"
        android:paddingHorizontal="16dp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btnorange"
        android:text="Daftar"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="24dp" />

</LinearLayout>
