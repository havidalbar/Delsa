<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_fotobencana"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:src="@drawable/dummybencana"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_judulriwayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:textColor="#000000"
                android:text="Bantu Saudara Kita Terkena Bencana Longsor Bandang"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="4dp">

                <TextView
                    android:id="@+id/tv_tanggalriwayat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="16 April 2019 pukul 14.30" />

            </LinearLayout>

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_statusriwayat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Belum tersalurkan" />


        </LinearLayout>


    </LinearLayout>

</LinearLayout>