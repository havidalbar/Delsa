<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DonasiPakaianActivity">

    <include
        android:id="@+id/toolbar_donasi_pakaian"
        layout="@layout/toolbar_donasipakaian" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_donasi_pakaian">

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_add_donasipakaian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/item_donasi_1"
                android:orientation="vertical"
                android:padding="16dp"
                tools:context=".activities.DonasiPakaianActivity">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingBottom="8dp"
                                    android:text="Kategori"
                                    android:textSize="18sp" />

                                <Spinner
                                    android:id="@+id/spn_kategori1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:paddingHorizontal="8dp"
                                    android:entries="@array/kategori_barang"
                                    android:background="@drawable/etbg"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="3"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:paddingBottom="8dp"
                                    android:text="Jumlah"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/et_jumlahitem1"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="@string/nominal_hint"
                                    android:inputType="number"
                                    android:textAlignment="textStart"
                                    android:textColor="@android:color/black"
                                    android:background="@drawable/etbg"
                                    android:textSize="18sp"
                                    android:paddingHorizontal="8dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:paddingTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi Barang (Opsional)"
                            android:textSize="18sp"/>

                        <EditText
                            android:id="@+id/et_deskripsi1"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/etbg"
                            android:gravity="start"
                            android:hint="Tulis deksripsi barang..."
                            android:paddingHorizontal="12dp"
                            android:paddingTop="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="16dp">

                            <LinearLayout
                                android:id="@+id/ll_hapus1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_delete_black_24dp"
                                    android:background="@drawable/btn_round_hapus"/>

                                <TextView
                                    android:layout_marginLeft="8dp"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hapus"
                                    android:textColor="#eb2700"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="16dp"
                                android:background="@android:color/darker_gray" />

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/item_donasi_2"
                android:visibility="gone"
                android:padding="16dp"
                tools:context=".activities.DonasiPakaianActivity">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingBottom="8dp"
                                    android:text="Kategori"
                                    android:textSize="18sp" />

                                <Spinner
                                    android:id="@+id/spn_kategori2"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:paddingHorizontal="8dp"
                                    android:entries="@array/kategori_barang"
                                    android:background="@drawable/etbg"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="16dp"
                                android:layout_weight="3"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:paddingBottom="8dp"
                                    android:text="Jumlah"
                                    android:textSize="18sp" />

                                <EditText
                                    android:id="@+id/et_jumlahitem2"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:hint="@string/nominal_hint"
                                    android:inputType="number"
                                    android:textAlignment="textStart"
                                    android:textColor="@android:color/black"
                                    android:background="@drawable/etbg"
                                    android:textSize="18sp"
                                    android:paddingHorizontal="8dp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:paddingTop="16dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deskripsi Barang (Opsional)"
                            android:textSize="18sp"/>

                        <EditText
                            android:id="@+id/et_deskripsi2"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/etbg"
                            android:gravity="start"
                            android:hint="Tulis deksripsi barang..."
                            android:paddingHorizontal="12dp"
                            android:paddingTop="8dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="16dp">

                            <LinearLayout
                                android:id="@+id/ll_hapus2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_delete_black_24dp"
                                    android:background="@drawable/btn_round_hapus"/>

                                <TextView
                                    android:layout_marginLeft="8dp"
                                    android:textSize="16sp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Hapus"
                                    android:textColor="#eb2700"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:layout_marginTop="16dp"
                                android:background="@android:color/darker_gray" />

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <Button
                android:id="@+id/btn_lanjutkandonasipakaian"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_alignParentBottom="true"
                android:text="Lanjutkan"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/btnorange"
                android:layout_margin="16dp"/>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_tidakadaform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/undraw_no_data_qbuo"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="16dp"
            android:text="Tidak ada form"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="Mulai dengan menekan tombol plus"
            android:textSize="18sp" />


    </LinearLayout>



</RelativeLayout>